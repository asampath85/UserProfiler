@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}



<div class="container-fluid">

    <div class="row-fluid">
        <div class="page-header">
            <h2 style="color: #4099ff">Weather Data
                <img src="~/Content/themes/base/images/WeatherIcons/501d.png" width="40" height="30" /></h2>

            <p class="lead" style="color: #4099ff">Information about the Weather for a given city.</p>
        </div>
    </div>



       <div class="row-fluid">


        <div class="col-lg-4">

            <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="New York" aria-describedby="sizing-addon2" data-bind="value: CityName">
            </div>


        </div>

        <div class="col-lg-3">

            <button type="button" class="btn-lg btn-primary" data-bind="click: GetWeatherDetails">Get Weather</button>
        </div>

    </div>



    <div class="row-fluid">
        <div style="height: 75px"></div>
        @*TODO: TEMP fix. i dont know y two rows merging if i dont add height*@

    </div>

    <div class="row-fluid">

        <section data-bind="if: isLoading">
            <div class="center-block">
                <img src="~/Content/themes/base/images/loading.gif" alt="Loading......" />
            </div>
        </section>
        <div id="pd" data-bind="html: WeatherDetails">
        </div>

    </div>
</div>




@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var weatherModel = new WeatherViewModel();
            ko.applyBindings(weatherModel);

        });
    </script>
}